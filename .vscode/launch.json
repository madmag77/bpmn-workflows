            "args": [
                "workflows/deepresearch/deepresearch.xml",
                "--functions",
                "steps.deepresearch_functions",
                "--param",
                "query=What is the impact of artificial intelligence on healthcare?"
            ]
        },
        {
            "name": "Continue deepresearch",
            "type": "debugpy",
            "request": "launch",
            "program": "run_bpmn_workflow.py",
            "console": "integratedTerminal",
            "args": [
                "workflows/deepresearch/deepresearch.xml",
                "--functions",
                "steps.deepresearch_functions",
                "--resume",
                "{\"answer\": \"Interrested mostly in diagnostics\"}",
                "--thread-id",
                "AskUser:1205369b-51de-5489-ddd3-1abe2e100c98"
            ]
        },
        {
            "name": "Validate deepresearch",
            "type": "debugpy",
            "request": "launch",
            "program": "validate_workflow.py",
            "console": "integratedTerminal",
            "args": [
                "workflows/deepresearch/deepresearch.xml",
                "--functions",
                "steps.deepresearch_functions"
            ]
        },
        {
            "name": "Python: Run Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/",
                "-vv",
                "--capture=no",
                "--tb=short"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Chainlit",
            "type": "debugpy",
